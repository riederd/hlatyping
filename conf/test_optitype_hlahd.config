/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running optitype + hlahd tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines bundled input files and everything required to run a fast and simple test.

    Use as follows:
        nextflow run nf-core/hlatyping -profile test_hlahd,<docker/singularity> --outdir <OUTDIR>
----------------------------------------------------------------------------------------
 */

process {
    resourceLimits = [
        cpus: 8,
        memory: '15.GB',
        time: '2.h'
    ]
}

params {
    config_profile_name        = 'optitype_hlahd (DNA/RNA) Test Profile'
    config_profile_description = 'Test dataset with paired-end fastq files from DNA and RNA using optitype and HLA-HD'

    input      = params.pipelines_testdata_base_path + 'hlatyping/samplesheets/samplesheet_dna_rna.csv'
    hlahd_path = "${HOME}/hlahd.1.7.1.tar.gz"
    tools      = 'optitype,hlahd'
}